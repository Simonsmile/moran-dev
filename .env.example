# =============================================================================
# Moran ERP - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=moran_erp
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DATABASE=0

# -----------------------------------------------------------------------------
# RabbitMQ
# -----------------------------------------------------------------------------
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=rabbit_admin
RABBITMQ_PASSWORD=your_rabbitmq_password_here
RABBITMQ_STOMP_PORT=61613

# -----------------------------------------------------------------------------
# Nacos (Configuration & Service Discovery)
# -----------------------------------------------------------------------------
NACOS_SERVER_ADDR=localhost:8848
NACOS_NAMESPACE=dev
NACOS_GROUP=DEFAULT_GROUP

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_key_at_least_256_bits_here
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# -----------------------------------------------------------------------------
# OAuth2 Configuration
# -----------------------------------------------------------------------------
OAUTH2_CLIENT_ID=moran-erp-client
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret_here

# -----------------------------------------------------------------------------
# WangDianTong (WDT) ERP Integration
# -----------------------------------------------------------------------------
WDT_APP_KEY=your_wdt_app_key
WDT_APP_SECRET=your_wdt_app_secret
WDT_SID=your_wdt_sid
WDT_BASE_URL=https://api.wangdian.cn/openapi2/

# -----------------------------------------------------------------------------
# Application Ports
# -----------------------------------------------------------------------------
GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
BUSINESS_SERVICE_PORT=8082
EXTERNAL_SERVICE_PORT=8083

# -----------------------------------------------------------------------------
# Frontend API URLs (for development)
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080/ws

# -----------------------------------------------------------------------------
# GitHub Configuration
# -----------------------------------------------------------------------------
GITHUB_USERNAME=Simonsmile
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO_DEV=https://github.com/Simonsmile/moran-dev.git
GITHUB_REPO_ERP=https://github.com/Simonsmile/moran-erp.git
GITHUB_REPO_WEB=https://github.com/Simonsmile/moran-web.git

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_PATH=/ext/moran/logs
